# bat
export BAT_THEME="base16"

# fzf
export FZF_DEFAULT_COMMAND='fd --type f --follow --hidden'
export FZF_DEFAULT_OPTS="--height 50%"
export FZF_DEFAULT_OPTS=$FZF_DEFAULT_OPTS'
